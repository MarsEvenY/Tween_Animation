<?xml version="1.0" encoding="utf-8"?>

<!-- 实现透明度渐变的动画资源 -->

<set xmlns:android="http://schemas.android.com/apk/res/android">
  <alpha
      android:fromAlpha="1"
      android:toAlpha="0"
      android:repeatMode="reverse"
      android:fillAfter = "true"
      android:repeatCount = "1"
      android:duration = "2000"
      />
</set>